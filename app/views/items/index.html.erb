<h1 class="text-center my-4">Felszerelések</h1>

<% if admin_signed_in? %>
<div class="d-flex justify-content-end my-3">
  <%= link_to 'Új felszerelés', new_item_path, class: "btn btn-outline-primary" %>
</div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Név</th>
      <th>Leírás</th>
      <% if admin_signed_in? %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item %></td>
        <td><%= item.description %></td>
        <% if admin_signed_in? %>
          <td class="text-end">
            <div class="btn-group" role="group" aria-label="Műveletek">
              <%= link_to edit_item_path(item), class: "btn btn-outline-primary btn-sm", title: "Módosítás" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              <% end %>
              <%= link_to item,
                method: :delete, 
                data: { confirm: 'Biztosan törlöd?' }, 
                class: "btn btn-outline-danger btn-sm",
                title: "Törlés" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
