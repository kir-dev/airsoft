<!DOCTYPE html>
<html>
  <head>
    <title>Airsoft</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
    <p><%= current_user.name %></p><p><%= link_to "Kijelentkezés", destroy_user_session_path, method: :delete %> </p>
    <% else%>
      <%= link_to "Bejelnetkezés", new_user_session_path %>
    <%end %>
    <%= yield %>
  </body>
</html>
