<%# Header %>
<% content_for :header do %>
  <header class="mb-4 mt-3">
    <h1 class="fs-1 text-center">Archívum</h1>
  </header>
<% end %>

<div class="row justify-content-center my-3">
  <div class="col-lg-8 col-md-10 col-12">
    <% @posts.each do |post| %>
      <div class="my-3 fs-5">
        <%= l post.created_at, format: :datetime %>&nbsp;»&nbsp;
        <%= link_to post.title, post, class: "fs-5" %>
      </div>
    <% end %>
  </div>
</div>
