<div class="my-3">
  <h2>
    <%= @event.name %>
  </h2>
  <p>
    Időpontja: <%= l @event.start %> - <%= l @event.end %>
  </p>
</div>

<div class="py-5">
  <div class="mb-4 mt-2">
    <%= @event.description %>
  </div>
  <% if @event.event_type %>
    <div class="d-flex justify-content-end mb-2">
      <%= link_to 'Jelentkezek!', register_to_event_path(@event), class: "btn btn-outline-info" %>
    </div>
  <% end %>
</div>

<div class="d-flex flex-wrap">
  <div class="d-flex mt-1">
    <%= link_to 'Vissza', posts_path, class: "btn btn-outline-primary" %>
  </div>
  <% if admin_signed_in? %>
    <div class="d-flex flex-grow-1 mt-1 justify-content-end">
      <%= link_to 'Jelentkezések megtekintése', event_registrations_path(@event), class: "btn btn-outline-info" %>
      <%= link_to 'Módosítás', edit_event_path(@event), class: "btn btn-primary ms-2" %>
      <%= link_to 'Törlés', @event, class: "btn btn-danger ms-2", method: :delete, data: { confirm: "Biztosan törlöd az eseményt?" } %>
    </div>
  <% end %>
</div>
