<p id="notice"><%= notice %></p>

<p>
  <strong>Esemény neve:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <% if @event.event_type %>
    <%= link_to 'Regisztrálok', register_to_event_path(@event), class: "btn btn-success" %>
  <% end %>
</p>

<% if admin_signed_in? %>
  <%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>
