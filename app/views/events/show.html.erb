<div class="my-3">
  <h2>
    <%= @event.name %>
  </h2>
  <p>
    Időpontja: <%= l @event.start %> - <%= l @event.end %>
  </p>
</div>

<div class="mt-5 mb-3">
  <div class="mb-4 mt-2">
    <%= @event.description %>
  </div>
  <% if @event.event_type %>
    <div class="text-end mb-1">
      <%= link_to 'Jelentkezek!', register_to_event_path(@event), class: "btn btn-primary" %>
    </div>
    <% if admin_signed_in? %>
      <div class="text-end mb-2">
        <%= link_to 'Jelentkezések megtekintése', event_registrations_path(@event), class: "btn btn-outline-primary btn-sm" %>
      </div>
      <% end %>
  <% end %>
</div>

<div class="d-flex flex-wrap">
  <div class="d-flex mt-1">
    <%= link_to posts_path, class: "btn btn-outline-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
      </svg>
    <% end %>
  </div>
  <% if admin_signed_in? %>
    <div class="d-flex flex-grow-1 mt-1 justify-content-end">
      <%= link_to 'Módosítás', edit_event_path(@event), class: "btn btn-primary ms-2" %>
      <%= link_to 'Törlés', @event, class: "btn btn-danger ms-2", method: :delete, data: { confirm: "Biztosan törlöd az eseményt?" } %>
    </div>
  <% end %>
</div>
