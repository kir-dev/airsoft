<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group mb-12 mb-2">
    <div class="input-group-prepend">
      <%= form.label :post_id, class: "input-group-text" %>

    </div>
    <%= form.text_field :post_id, class: "form-control" %>
  </div>

  <div class="input-group mb-12 mb-2">
    <div class="input-group-prepend">
      <%= form.label :date, class: "input-group-text" %>

    </div>
    <%= form.datetime_select :date, class: "form-control" %>
  </div>

  <div class="input-group mb-12 mb-2">
    <div class="input-group-prepend">
      <%= form.label :event_type_id, "Jelentkező űrlap", class: "input-group-text" %>

    </div>
    <%= form.select :event_type_id,
                    options_for_select(@event_types = EventType.all.pluck(:name, :id)),
                    include_blank: "Nincs jelentkezés",
                    class:         "form-control" %>
  </div>



  <div class="button-collection mt-2">
    <div class="d-flex justify-content-left ">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </div>

<% end %>
