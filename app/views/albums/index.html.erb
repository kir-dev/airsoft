<%# Header %>
<% content_for :header do %>
  <header class="mb-4 mt-3">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 text-center">
          <h1 class="fs-1">Galéria</h1>
          <p class="fs-4">Albumok eseményeinkről</p>
        </div>
      </div>
    </div>
  </header>
<% end %>

<%# Button for admins %>
<div class="row mb-2">
  <div class="col-12">
    <%= link_to 'Új album', new_album_path, class: "btn btn-primary float-end" %>
  </div>
</div>

<%# Content %>
  <div class="album">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @albums.each do |album| %>
        <div class="col">
          <%= link_to album, class: "card shadow-sm album-card clickable" do  %>
            <%= image_tag album.thumbnail, class: "bd-placeholder-img card-img-top album-card-thumbnail" %>

            <% if !album.post.event.nil? %>
              <div class="bg-light rounded album-card-date">
                <%= raw l album.post.event.date, format: :albumdate %>
              </div>
            <% end %>

            <div class="card-body">
              <div class="card-title title">
                <span class="fs-4"><%= album.post.title %></span>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>